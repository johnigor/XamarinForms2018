<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App01_Vagas.Pages.CadastroVagaPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Vaga - Cargo"/>
            <Entry Placeholder="Empresa"/>
            <Entry Placeholder="Quantidade"/>
            <Entry Placeholder="Cidade"/>
            <Entry Placeholder="Salário"/>
            <Editor HeightRequest="200"/>
            <StackLayout Orientation="Horizontal">
                <Label Text="Tipo de contratação"/>
                <Label Text="CLT"/>
                <Switch/>
                <Label/>
            </StackLayout>
            <Entry Placeholder="Telefone"/>
            <Entry Placeholder="Email"/>
            <Button Text="Salvar"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>