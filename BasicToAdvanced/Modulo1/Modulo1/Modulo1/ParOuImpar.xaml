<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Modulo1.ParOuImpar">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Determina se um número é par ou impar"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="etValor"  Keyboard="Numeric" Placeholder="Informe um número" />
            <Button  x:Name="btExecutar" Text="Executar" Clicked="btExecutar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>