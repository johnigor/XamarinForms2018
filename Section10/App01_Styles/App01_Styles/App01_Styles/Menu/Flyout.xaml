<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:inicio="clr-namespace:App01_Styles"
             x:Class="App01_Styles.Menu.Flyout">
    <FlyoutPage.Flyout>
        <ContentPage Title="Menu">
            <StackLayout>
                <Button Text="Implicit Style" Clicked="GoImplicitStyle"/>
                <Button Text="Explicit Style" Clicked="GoExplicitStyle"/>
                <Button Text="Global Style" Clicked="GoGlobalStyle"/>
                <Button Text="Inherit Style" Clicked="GoInheritStyle"/>
            </StackLayout>
        </ContentPage>
    </FlyoutPage.Flyout>
    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <inicio:MainPage />
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>
</FlyoutPage>